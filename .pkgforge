name 'procps-ng'
org 'amylum'

licenses 'COPYING'

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  'without-ncurses': nil,
  'disable-kill': nil
)

harden

patch 'musl-cdefs.patch'
patch 'musl-libio.patch'

build do
  run "git describe | sed 's/^v//' > .version"
  run './autogen.sh'
  configure
  make
  install
end

